            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        <service id="app.admin.supplier" class="AppBundle\Admin\SupplierAdmin">
            <tag name="sonata.admin" manager_type="orm" group="acquisition" label="Suppliers"/>
            <argument>null</argument>
            <argument>AppBundle\Entity\Supplier</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        <service id="app.admin.acquisition" class="AppBundle\Admin\AcquisitionAdmin">
            <tag name="sonata.admin" manager_type="orm" group="accounting" label="Acquisitions"/>
