{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if (object.status.id == null) %}
        {% set label = 'default' %}
        {% set value = 'N/A' %}
    {% elseif (object.status.id == constant('AppBundle\\Entity\\DocumentStatus::STATUS_NEW')) %}
        {% set label = 'danger' %}
    {% elseif (object.status.id == constant('AppBundle\\Entity\\DocumentStatus::STATUS_PENDING')) %}
        {% set label = 'warning' %}
    {% elseif (object.status.id == constant('AppBundle\\Entity\\DocumentStatus::STATUS_COMPLETED')) %}
        {% set label = 'success' %}
    {% endif %}
    <span class="label label-{{ label }}">{{ value }}</span>
{% endblock %}
