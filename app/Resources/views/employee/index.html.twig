{% extends 'base.html.twig' %}

{% block body %}
<h3>Employees list</h3>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Full name (last, first)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for employee in employees %}
        <tr>
            <td>
                <a href="{{ path('employee_show', { 'id': employee.id }) }}">
                    {{ employee }}
                </a>
            </td>
            <td>
                <a href="{{ path('employee_show', { 'id': employee.id }) }}" class="btn btn-primary btn-sm" role="button">show</a>
                <a href="{{ path('employee_edit', { 'id': employee.id }) }}" class="btn btn-primary btn-sm" role="button">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


<a href="{{ path('employee_new') }}" class="btn btn-primary btn-sm" role="button">Create a new employee</a>

{% endblock %}
